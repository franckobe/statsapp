{% extends "base.html.twig" %}

{% block main %}
    <table class="table">
        <caption>{{ players|length }} joueurs</caption>
        <thead>
        <tr>
            <th>Nom</th>
            <th>Equipe</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for player in players %}
            <tr>
                <td>{{ player.name }}</td>
                <td>{{ player.team.name }}</td>
                <td><a href="{{ path('player', {playerId: player.id}) }}">Voir</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}