{% extends "base.html.twig" %}

{% block main %}
    <div class="flex flex-col gap-2 max-w-4xl mx-auto">
        {% for game in games %}
            <h2>Journ√©e {{ game.number }}</h2>
            <a href="{{ path('game', {gameId: game.id}) }}" class="flex w-full gap-4 border border-purple-200 rounded-2xl p-2 items-center hover:bg-gray-900">
                <div class="flex flex-col items-end w-1/2">
                    <span>{{ game.homeTeam.name }}</span>
                    <span class="text-2xl {{ game.homeScore > game.awayScore ? 'text-purple-300' : 'text-gray-300' }}">{{ game.homeScore }}</span>
                </div>
                <div class="flex flex-col items-start w-1/2">
                    <span>{{ game.awayTeam.name }}</span>
                    <span class="text-2xl {{ game.awayScore > game.homeScore ? 'text-purple-300' : 'text-gray-300' }}">{{ game.awayScore }}</span>
                </div>
            </a>
        {% endfor %}
    </div>
{% endblock %}
