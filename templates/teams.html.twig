{% extends "base.html.twig" %}

{% block main %}
    <table class="table table-filterable">
        <caption>{{ teams|length }} Ã©quipes</caption>
        <thead>
        <tr>
            <th class="filterable">Nom</th>
            <th colspan="3">Stats</th>
        </tr>
        </thead>
        <tbody>
        {% for team in teams %}
            <tr>
                <td>{{ team.name }}</td>
                <td class="text-center w-0.5">
                    <a href="{{ path('teamPlayersStats', {teamId: team.id, method: 'AVG'}) }}" class="whitespace-nowrap">Moyennes</a>
                </td>
                <td class="text-center w-0.5">
                    <a href="{{ path('teamPlayersStats', {teamId: team.id, method: 'SUM'}) }}" class="whitespace-nowrap">Totaux</a>
                </td>
                <td class="text-center w-0.5">
                    <a href="{{ path('teamPlayersStats', {teamId: team.id, method: 'MINUTE'}) }}" class="whitespace-nowrap">/ 40min</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}